COOKIE_SECURE=false
# Optional cookie domain (leave empty for host-only cookies)
# COOKIE_DOMAIN=localhost

CORS_ALLOWED_ORIGINS="http://localhost:8080,http://localhost:5173,http://localhost:3000"
